{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": [
            "error",
            {
              "arrowParens": "avoid",
              "bracketSpacing": false,
              "endOfLine": "auto",
              "htmlWhitespaceSensitivity": "css",
              "insertPragma": false,
              "jsxBracketSameLine": false,
              "jsxSingleQuote": false,
              "printWidth": 80,
              "proseWrap": "always",
              "quoteProps": "as-needed",
              "requirePragma": false,
              "semi": false,
              "singleQuote": true,
              "tabWidth": 2,
              "trailingComma": "all",
              "useTabs": false
            }
          ],
          "react/prop-types": [0],
          "quote-props": 0,
          "no-unused-vars": [2, {"vars": "all", "args": "none"}],
          "brace-style": [2, "1tbs", {"allowSingleLine": true}],
          "testing-library/no-node-access": 0
    }
}
